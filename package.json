{
  "name": "haya",
  "version": "0.1.0",
  "private": true,
  "description": "Personal AI assistant gateway",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:extensions": "vitest run --config vitest.extensions.config.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "lint:types": "tsc --noEmit",
    "lint:oxlint": "npx oxlint",
    "format:check": "npx @biomejs/biome check --no-errors-on-unmatched .",
    "format:fix": "npx @biomejs/biome check --write --no-errors-on-unmatched .",
    "check": "pnpm lint && pnpm lint:oxlint",
    "dev": "tsx packages/core/src/entry.ts",
    "audit:security": "tsx packages/core/src/entry.ts audit"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a",
  "devDependencies": {
    "@types/node": "^22.15.0",
    "@vitest/coverage-v8": "^3.1.0",
    "tsdown": "^0.12.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.0",
    "vitest": "^3.1.0"
  }
}
